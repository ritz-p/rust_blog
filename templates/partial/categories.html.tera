{% macro input(items)%}
<div class="mb-2">
  <div class="is-size-7 has-text-weight-semibold has-text-grey">Categories</div>
  <div class="tags mt-1">
    {% for category in items %}
      <a class="tag is-info is-light" href="/category/{{ category.slug }}">{{ category.name }}</a>
    {% endfor %}
  </div>
</div>
{% endmacro %}
